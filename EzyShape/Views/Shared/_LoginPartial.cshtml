@using Microsoft.AspNetCore.Identity
@using EzyShape.Infrastructure.Data.Models;

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">


    @if (SignInManager.IsSignedIn(User))
    {

        <form id="logoutForm" class="nav-link text-dark" asp-controller="User" asp-action="Logout" asp-route-id="@UserManager.GetUserId(User)">
            <p class="nav-link text-dark p1" onclick="document.getElementById('logoutForm').submit();">Logout</p>
        </form>


    }
    else
    {
        <a class="nav-link text-dark" asp-controller="User" asp-action="Login">Login</a>
        <a class="nav-link text-dark" asp-controller="User" asp-action="Register">Get Started</a>
    }

</ul>
