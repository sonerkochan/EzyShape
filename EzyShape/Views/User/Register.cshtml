@model RegisterViewModel;

@{
    ViewData["Title"] = "Register | Personal Trainer Software for Professionals";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EzyShape | Registration</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        :root {
            --primary: #2051f1;
            --primary-dark: #0e3dd8;
            --secondary: #2e475d;
            --light-bg: #f8f9fa;
            --card-bg: #ffffff;
            --text: #333333;
            --text-light: #666666;
            --danger: #e74c3c;
            --success: #2ecc71;
            --border: #e0e0e0;
            --shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            color: var(--text);
        }

        .container {
            display: flex;
            flex-direction: column;
            width: 100%;
            max-width: 500px;
            animation: fadeIn 0.5s ease-out;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* Header Styles */
        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo {
            height: 50px;
            margin-bottom: 20px;
        }

        .title {
            font-size: 2.2rem;
            font-weight: 700;
            margin-bottom: 10px;
            color: var(--secondary);
            line-height: 1.2;
        }

        .subtitle {
            color: var(--text-light);
            font-size: 1.1rem;
            margin-bottom: 5px;
        }

        /* Card Styles */
        .card {
            background: var(--card-bg);
            border-radius: 15px;
            box-shadow: var(--shadow);
            padding: 30px;
            margin-bottom: 25px;
            transition: all 0.3s ease;
        }

            .card:hover {
                box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            }

        /* Form Styles */
        .form-group {
            margin-bottom: 20px;
            position: relative;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: var(--secondary);
        }

        .required-star {
            color: var(--danger);
        }

        .form-control {
            width: 100%;
            padding: 14px 15px;
            border: 2px solid var(--border);
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s;
        }

            .form-control:focus {
                border-color: var(--primary);
                outline: none;
                box-shadow: 0 0 0 3px rgba(32, 81, 241, 0.2);
            }

        .input-icon {
            position: absolute;
            right: 15px;
            top: 42px;
            color: var(--text-light);
            cursor: pointer;
        }

        .validation-error {
            color: var(--danger);
            font-size: 0.85rem;
            margin-top: 5px;
            display: block;
        }

        /* Button Styles */
        .btn {
            display: block;
            width: 100%;
            padding: 15px;
            border: none;
            border-radius: 50px;
            font-size: 1.05rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            text-align: center;
        }

        .btn-primary {
            background: var(--primary);
            color: white;
            position: relative;
            overflow: hidden;
        }

            .btn-primary:hover {
                background: var(--primary-dark);
                transform: translateY(-2px);
                box-shadow: 0 7px 15px rgba(32, 81, 241, 0.3);
            }

            .btn-primary:after {
                content: "";
                position: absolute;
                top: -50%;
                left: -60%;
                width: 20px;
                height: 200%;
                background: rgba(255, 255, 255, 0.2);
                transform: rotate(25deg);
                transition: all 0.5s;
            }

            .btn-primary:hover:after {
                left: 120%;
            }

        .btn-google {
            background: white;
            color: var(--text);
            border: 2px solid var(--border);
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 15px;
            position: relative;
            overflow: hidden;
        }

            .btn-google:hover {
                border-color: #db4437;
                background: #f8f8f8;
            }

        .google-icon {
            font-size: 1.2rem;
            margin-right: 10px;
            color: #db4437;
        }

        /* Divider */
        .divider {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 25px 0;
            color: var(--text-light);
            font-size: 0.9rem;
        }

            .divider::before,
            .divider::after {
                content: '';
                flex: 1;
                border-bottom: 1px solid var(--border);
            }

            .divider::before {
                margin-right: 15px;
            }

            .divider::after {
                margin-left: 15px;
            }

        /* Footer Links */
        .footer-link {
            text-align: center;
            margin-top: 10px;
            color: var(--text-light);
            font-size: 0.95rem;
        }

            .footer-link a {
                color: var(--primary);
                text-decoration: none;
                font-weight: 500;
                transition: color 0.3s;
                position: relative;
            }

                .footer-link a:after {
                    content: '';
                    position: absolute;
                    width: 0;
                    height: 2px;
                    bottom: -2px;
                    left: 0;
                    background-color: var(--primary);
                    transition: width 0.3s;
                }

                .footer-link a:hover {
                    color: var(--primary-dark);
                }

                    .footer-link a:hover:after {
                        width: 100%;
                    }

        /* Password Strength Indicator */
        .password-strength {
            height: 5px;
            border-radius: 5px;
            margin-top: 8px;
            background: #eee;
            overflow: hidden;
            position: relative;
        }

        .strength-meter {
            height: 100%;
            width: 0;
            transition: width 0.3s, background 0.3s;
        }

        /* Responsive Adjustments */
        @@media (max-width: 480px) {
            .card

        {
            padding: 25px 20px;
        }

        .title {
            font-size: 1.8rem;
        }

        .subtitle {
            font-size: 1rem;
        }

        }
    </style>
</head>
<body>
    <!-- Registration Page -->
    <div class="container">
        <div class="header">
            <img src="~/img/TextLogo.png" alt="EzyShape" class="logo">
            <h1 class="title">Create your account</h1>
            <p class="subtitle">to join our community and grow your business</p>
        </div>

        <div class="card">
            <form asp-action="Register" method="post">
                <div class="form-group">
                    <label class="form-label" for="username">Username <span class="required-star">*</span></label>
                    <input asp-for="UserName" type="text" id="username" class="form-control" autocomplete="username" aria-required="true">
                    <span asp-validation-for="UserName" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label class="form-label" for="firstname">First Name <span class="required-star">*</span></label>
                    <input asp-for="FirstName" type="text" id="firstname" class="form-control" autocomplete="given-name" aria-required="true">
                    <span asp-validation-for="FirstName" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label class="form-label" for="lastname">Last Name <span class="required-star">*</span></label>
                    <input asp-for="LastName" type="text" id="lastname" class="form-control" autocomplete="family-name" aria-required="true">
                    <span asp-validation-for="LastName" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label class="form-label" for="email">Email <span class="required-star">*</span></label>
                    <input asp-for="Email" type="email" id="email" class="form-control" autocomplete="email" aria-required="true">
                    <span asp-validation-for="Email" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label class="form-label" for="password">Password <span class="required-star">*</span></label>
                    <input asp-for="Password" type="password" id="password" class="form-control" autocomplete="new-password" aria-required="true">
                    <i class="fas fa-eye input-icon" id="togglePassword"></i>
                    <span asp-validation-for="Password" class="validation-error"></span>

                    <div class="password-strength">
                        <div class="strength-meter" id="strengthMeter"></div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label" for="confirmPassword">Confirm Password <span class="required-star">*</span></label>
                    <input asp-for="ConfirmPassword" type="password" id="confirmPassword" class="form-control" autocomplete="new-password" aria-required="true">
                    <i class="fas fa-eye input-icon" id="toggleConfirmPassword"></i>
                    <span asp-validation-for="ConfirmPassword" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <div class="remember-me">
                        <input type="checkbox" id="terms" required>
                        <label for="terms">I agree to the <a href="#" class="forgot-password">Terms of Service</a> and <a href="#" class="forgot-password">Privacy Policy</a></label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Create Account</button>

                <div class="divider">or continue with</div>

                <button type="button" class="btn btn-google">
                    <i class="fab fa-google google-icon"></i> Sign up with Google
                </button>
            </form>
        </div>

        <div class="footer-link">
            Already have an account? <a href="/User/Login">Log in now!</a>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Password visibility toggle
            const togglePassword = document.getElementById('togglePassword');
            const password = document.getElementById('password');

            if (togglePassword) {
                togglePassword.addEventListener('click', function() {
                    const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                    password.setAttribute('type', type);
                    this.classList.toggle('fa-eye');
                    this.classList.toggle('fa-eye-slash');
                });
            }

            // Confirm password toggle
            const toggleConfirmPassword = document.getElementById('toggleConfirmPassword');
            const confirmPassword = document.getElementById('confirmPassword');

            if (toggleConfirmPassword) {
                toggleConfirmPassword.addEventListener('click', function() {
                    const type = confirmPassword.getAttribute('type') === 'password' ? 'text' : 'password';
                    confirmPassword.setAttribute('type', type);
                    this.classList.toggle('fa-eye');
                    this.classList.toggle('fa-eye-slash');
                });
            }

            // Password strength indicator
            const passwordInput = document.getElementById('password');
            const strengthMeter = document.getElementById('strengthMeter');

            if (passwordInput && strengthMeter) {
                passwordInput.addEventListener('input', function() {
                    const strength = calculatePasswordStrength(this.value);
                    strengthMeter.style.width = strength.percent + '%';
                    strengthMeter.style.background = strength.color;
                });
            }

            function calculatePasswordStrength(password) {
                let strength = 0;
                if (password.length > 0) strength += 20;
                if (password.length >= 8) strength += 20;
                if (/[A-Z]/.test(password)) strength += 20;
                if (/[0-9]/.test(password)) strength += 20;
                if (/[^A-Za-z0-9]/.test(password)) strength += 20;

                let color;
                if (strength < 40) color = '#e74c3c';
                else if (strength < 70) color = '#f39c12';
                else color = '#2ecc71';

                return { percent: strength, color: color };
            }

            // Form validation feedback
            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.addEventListener('blur', function() {
                    if (this.value.trim() !== '') {
                        this.classList.add('filled');
                    } else {
                        this.classList.remove('filled');
                    }
                });
            });
        });
    </script>
</body>
</html>