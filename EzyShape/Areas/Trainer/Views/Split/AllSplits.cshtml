@model IEnumerable<SplitViewModel>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = $"{Localizer["All Splits"]} ● EzyShape";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/normalize.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Trainer/allSplits.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <main class="container">
        <header class="header">
            <h1>@Localizer["All Splits"]</h1>
            <a asp-area="Trainer" asp-controller="Split" asp-action="AddSplit" class="btn-primary">
                <i class="fas fa-plus"></i> @Localizer["Add New Split"]
            </a>
        </header>

        <div class="search-container">
            <input type="text" placeholder="@Localizer["Search for a split..."]" class="search-input" id="splitSearchInput" />
        </div>

        <section class="table-wrapper">
            @if (Model != null && Model.Any())
            {
                <table class="styled-table" id="splitTable">
                    <thead>
                        <tr>
                            <th>@Localizer["Name"]</th>
                            <th>@Localizer["Description"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var split in Model)
                        {
                            <tr onclick="window.location.href='@Url.Action("Detail", "Split", new { area = "Trainer", splitId = split.Id })';">
                                <td>
                                    @split.Name
                                </td>
                                <td>
                                    @(string.IsNullOrWhiteSpace(split.Description)
                                        ? Localizer["No description."]
                                        : split.Description)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="no-results">@Localizer["No splits found."]</p>
            }
        </section>
    </main>

    <script src="~/js/Trainer/searchSplits.js"></script>
</body>
</html>
