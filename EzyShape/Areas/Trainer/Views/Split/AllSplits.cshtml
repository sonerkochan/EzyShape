@model IEnumerable<SplitViewModel>

@{
    ViewData["Title"] = "All Splits | Personal Trainer Software for Professionals";
}

<html>

<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/normalize.css" asp-append-version="true" />
</head>


<body>

    <h2>@ViewData["Title"]</h2>


    <button type="button" class="button" style="background: lightgray;border:1px solid black;margin-right: 10px">
        <div>
            <a class="nav-link text-dark" asp-area="Trainer" asp-controller="Split" asp-action="AddSplit">Add a new split</a>
        </div>
    </button>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var split in Model)
                {
                    <tr>
                        <td>
                            <a asp-area="Trainer"
                               asp-controller="Split"
                               asp-action="Detail"
                               asp-route-id="@split.Id">
                                @split.Name
                            </a>
                        </td>
                        <td>@(string.IsNullOrEmpty(split.Description) ? "N/A" : split.Description)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No splits found.</p>
    }

</body>

</html>