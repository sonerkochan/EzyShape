@model Split

@{
    ViewData["Title"] = "GIVEN SPLIT NAME | Personal Trainer Software for Professionals";
}

<html>

<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/normalize.css" asp-append-version="true" />
</head>


<body>



    @if (Model != null)
    {
        <button type="button" class="button" style="background: lightgray;border:1px solid black;margin-right: 10px">
            <div>
                <a class="nav-link text-dark" asp-area="Trainer" asp-controller="Workout" asp-action="AssignWorkout">Assign a workout</a>
            </div>
        </button>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Name</td>
                    <td>@(string.IsNullOrEmpty(Model.Description) ? "N/A" : Model.Description)</td>
                </tr>
            </tbody>
        </table>
    }
    else
    {
        <p>No splits found.</p>
    }

</body>

</html>